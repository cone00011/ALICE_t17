---
const cols = 12;
const rows = 8;

// Sæt de pink cellers index her
const pinkCells = [1, 2, 3, 4, 5, 6, 7, 8, 13, 19, 25, 40, 41, 42, 70];

// Lav et array med ét element pr. gridcelle
const totalCells = cols * rows;
---

<article>
    <div class="hero-grid">
  {Array.from({ length: totalCells }).map((_, i) => (
    <div class={pinkCells.includes(i) ? "cell pink" : "cell"}></div>
  ))}
</div>
</article>


<style>
	.hero-grid {
  display: grid;
  grid-template-columns: repeat(12, 1fr);
  grid-template-rows: repeat(8, 7vw); /* tilpas højde */
  width: 100%;
}

.cell {
  background: transparent;
}

.pink {
  background: #e8a2c0; /* din pink */
}
</style>