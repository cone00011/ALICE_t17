  grid-template-rows: repeat(10, 10vw);
  width: 100%;
  height: 100%;
  
  position: relative;
  overflow: hidden; /* Alt udenfor grid-celler bliver klippet */
}

.grid-item {
  position: relative;
  overflow: hidden; /* Alt udenfor kolonner/r√¶kker klippes */
