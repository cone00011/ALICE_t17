---
interface Props {
  date: string;
  artist: string;
  extraClass?: string;
  highlight?: boolean;
  month?: string;   // fx "November"
  genre?: string;   // fx "folk", "electronic"
}

const {
  date,
  artist,
  extraClass = "",
  highlight = false,
  month = "",
  genre = "",
} = Astro.props;

let colorClasses = highlight
  ? "bg-[#4A40FF] text-[#000000]"
  : "bg-[#E8A9C4] text-[#272727]";
---

<!--
  month og genre er ikke synlige, men findes som data-attributes for filtrering:
  <div data-month="November" data-genre="folk"> ...
-->
<div
  class={`px-6 py-5 w-full font-suisse tracking-widest ${colorClasses} ${extraClass}`}
  data-month={month}
  data-genre={genre}
>
  <!-- Dato -->
  <div class="text-[32px] md:text-[60px] leading-none mb-4 font-suisse tracking-widest">
    {date}
  </div>

  <!-- Kunstnernavn + pil -->
  <div class="relative text-[14px] md:text-[25px] leading-snug font-suisse tracking-widest pr-8">
    {artist}
    <!-- Pil -->
    <span class="absolute bottom-0 right-0 text-[20px] md:text-[30px]">
      â†’
    </span>
  </div>
</div>
